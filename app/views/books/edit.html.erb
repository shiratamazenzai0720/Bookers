<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

  <div class="newbook">
    <div class="index">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="newbook">
    <div class="index">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="newbook">
    <%= f.submit 'Update Book' %>
  </div>

  <a class ="show">
    <%= link_to "Show", book_path(@book.id) %>
  </a>
|
  <a class="back">
    <%= link_to "Back", {controller: "books", action: "back_to_index"}, class: "btn btn-primary" %>
  </a>
    
<% end %>
