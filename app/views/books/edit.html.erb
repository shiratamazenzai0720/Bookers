<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>

  <a class ="show">
    <%= link_to "Show", book_path(@book.id) %>
  </a>
|
  <a class="back">
    <%= link_to "Back", {controller: "books", action: "back_to_index"}, class: "btn btn-primary" %>
  </a>
    
<% end %>
