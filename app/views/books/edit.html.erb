<h1>Editing Book</h1>

<div class="alert">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book do |f| %>

  <div class="newbook">
    <div class="index">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="newbook">
    <div class="index">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="newbook">
    <%= f.submit 'Update Book' %>
  </div>

  <a class ="show">
    <%= link_to "Show", book_path(@book.id) %>
  </a>
|
  <a class="back">
    <%= link_to "Back", {controller: "books", action: "back_to_index"}, class: "btn btn-primary" %>
  </a>
    
<% end %>
